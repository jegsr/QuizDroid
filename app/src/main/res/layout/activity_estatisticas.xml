<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmain"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall">

        <Button
            android:id="@+id/utilizador"
            android:layout_width="0dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Nome de Utilizador"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:drawableBottom="@mipmap/ic_sort_up"/>

        <Button
            android:id="@+id/nivel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textSize="12dp"
            android:text="Nível"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:drawableBottom="@mipmap/ic_sort_up"/>

        <Button

            android:id="@+id/pontuacao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Pontuação"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:drawableBottom="@mipmap/ic_sort_up"
            />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dip"></ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Não existem elementos para serem apresentados."></TextView>

</LinearLayout>