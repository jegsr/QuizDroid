<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Nivel"></TextView>

        <TextView
            android:id="@+id/idNivelPerguntaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Pergunta"></TextView>

        <TextView
            android:id="@+id/perguntaPerguntaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Opção Correcta"></TextView>

        <TextView
            android:id="@+id/corretaPerguntaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Primeira Opção Incorrecta"></TextView>

        <TextView
            android:id="@+id/incorrecta1PerguntaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Segunda Opção Incorrecta"></TextView>

        <TextView
            android:id="@+id/incorrecta2PerguntaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Terceira Opção Incorrecta"></TextView>

        <TextView
            android:id="@+id/incorrecta3PerguntaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></TextView>
    </LinearLayout>

</LinearLayout>